#!/bin/sh

PANEL_FONT="-*-fixed-*-*-*-*-10-*-*-*-*-*-*-*"

#PANEL_FONT="-*-terminus-medium-r-normal-*-12-*-*-*-c-*-*-1"
PANEL_FIFO=/tmp/panelfifo

export PANEL_FONT 
battery() {
  printf "BAT Stats"
}


[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"


buf='STest'
buf="${buf} $(battery) Test"

#echo $buf > "$PANEL_FIFO" &

bspc subscribe report > "$PANEL_FIFO" &

~/.config/bspwm/panel_bar < "$PANEL_FIFO" | lemonbar  -g x20 -B "#222222" -F "#cccccc" -f "$PANEL_FONT" | sh &


#wait

#echo "wft??"
